{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@babel/eslint-parser", // Добавьте этот параметр
  "parserOptions": {
    "requireConfigFile": false, // Отключаем требование конфигурационного файла
    "ecmaVersion": 2021, // Укажите версию ECMAScript
    "sourceType": "module" // Укажите модульный синтаксис
  },
  "env": {
    "browser": true, // Укажите, что код будет выполняться в браузере
    "es6": true // Укажите, что используется ES6
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
